{
  "name": "noexec",
  "version": "0.1.0",
  "description": "Runtime security for AI coding assistants - prevent dangerous commands and credential leaks",
  "main": "dist/index.js",
  "bin": {
    "noexec": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "debug:init": "node --inspect-brk dist/cli.js init",
    "debug:analyze": "echo '{\"command\": \"test_me\"}' | node --inspect-brk dist/cli.js analyze"
  },
  "keywords": [
    "security",
    "ai",
    "claude-code",
    "github-copilot",
    "ai-security",
    "credential-leak",
    "hooks",
    "cli-security",
    "developer-tools",
    "ai-safety"
  ],
  "author": "Emil Gelman <emil.gelman@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/emilgelman/noexec.git"
  },
  "bugs": {
    "url": "https://github.com/emilgelman/noexec/issues"
  },
  "homepage": "https://github.com/emilgelman/noexec#readme",
  "dependencies": {
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
