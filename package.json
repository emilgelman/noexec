{
  "name": "noexec",
  "version": "1.0.0",
  "description": "Runtime security for AI coding assistants - prevent dangerous commands and credential leaks before they execute",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "noexec": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "husky",
    "prepublishOnly": "npm run build && npm test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "debug:init": "node --inspect-brk dist/cli.js init",
    "debug:analyze": "echo '{\"command\": \"test_me\"}' | node --inspect-brk dist/cli.js analyze",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "format": "prettier --write ."
  },
  "keywords": [
    "security",
    "ai",
    "ai-security",
    "ai-safety",
    "claude-code",
    "github-copilot",
    "openai",
    "anthropic",
    "credential-leak",
    "credential-detection",
    "hooks",
    "cli-security",
    "developer-tools",
    "devtools",
    "runtime-security",
    "command-filtering",
    "destructive-commands",
    "static-analysis",
    "security-scanner"
  ],
  "author": "Emil Gelman <emil.gelman@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/emilgelman/noexec.git"
  },
  "bugs": {
    "url": "https://github.com/emilgelman/noexec/issues"
  },
  "homepage": "https://github.com/emilgelman/noexec#readme",
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "peerDependencies": {},
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
